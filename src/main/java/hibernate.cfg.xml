		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/SunilSchema</property>
		<property name="hibernate.connection.username">sunil</property>
		<property name="hibernate.connection.password">sunil110</property>
		<mapping class="org.sunil.entity.Department" />
		<mapping class="org.sunil.entity.Employee" />
	</session-factory>
</hibernate-configuration>